{% extends 'base.html.twig' %}

{% block title %}{{produit.nom}}{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }
</style>

<div class="example-wrapper">
    <h1>{{produit.nom}}</h1>
    <div class="row">
        <img src="{{ asset('upload/images/' ~ produit.photo)}}" class="img-thumbnail" style="width:300px;"
            alt="{{produit.nom}}">
    </div>
    <div class="row"> <strong>{{'Quantité' | trans}}</strong> : {{produit.quantite}} </div>
    <div class="row"> <strong>{{'Montant' | trans}}</strong> : {{produit.prix}}€ </div>
</div>
<div class="buy example-wrapper">
    <div class="row">
        <h2>{{'Acheter'  | trans}} : {{produit.nom}}</h2>
    </div>
    {{form_start(panierForm)}}
    {{form_end(panierForm)}}

    <a href="{{path('deleteProduit', {id: produit.id})}}"><button class="btn btn-danger">{{'Supprimer le produit' | trans}}</button></a>
</div>
</div>

{% endblock %}